{
  "name": "phleg",
  "version": "0.2.0",
  "description": "CLI + Cloudflare Workers + R2 one-time file sharing service",
  "type": "module",
  "main": "dist/index.cjs",
  "bin": {
    "phleg": "dist/index.cjs"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.cjs --format=cjs --target=node18",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "file-sharing",
    "cloudflare",
    "workers",
    "r2",
    "one-time",
    "secure"
  ],
  "author": "retraut",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/retraut/phleg.git"
  },
  "bugs": {
    "url": "https://github.com/retraut/phleg/issues"
  },
  "homepage": "https://github.com/retraut/phleg#readme",
  "dependencies": {
    "commander": "^12.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist/index.cjs",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  }
}
